<section>
    <img src="https://www.aarke.com/media/cache/respizr/6/wysiwyg/Images/2500x1086/Carbonator_3_Banner_Desktop.jpg" alt="" class="w-100">
</section>
<section class="bg-white py-12">
    <div class="container flex justify-center">
        <div class="max-w-md text-center">
            <h1 class="font-extrabold text-lg md:text-[40px] leasing-md md:leading-10 mb-5">A Carbonator<br>
            for the ages</h1>
            <p class="font-semibold">Carbonator 3 is our premium sparkling water maker in stainless steel. It comes in eight stunning finishes, to match and upgrade any countertop.</p>
        </div>
    </div>
</section>
<section class="bg-[#efefef] py-8">
    <div class="container">
        {% paginate collection.products by 20 %}
            <div class="flex gap-5">
                {% for product in collection.products %}
                    <div class="w-1/2 sm:w-1/3 lg:w-1/4">
                        {% render 'product-card', card_product: product %}
                    </div>
                {% endfor %}
            </div>

            {{ paginate | default_pagination }}
        {% endpaginate %}
    </div>
</section>
