<footer class="bg-[#3c3c3c] text-white py-16">
  <div class="container">
    <div class="md:flex gap-10">
      <div class="w-100 lg:w-1/5">
        <img class="max-w-[140px] invert mb-5" src="https://www.aarke.com/static/version1650540419/frontend/Improove/aarke/en_GB/images/logo.svg" alt="">
        <p class="text-sm">Aarke is a Swedish design company. We engineer premium home essentials purposefully designed to fuse luxury with everyday use.</p>
      </div>
      <div class="w-100 lg:w-1/5">
        <h5 class="font-semibold">Support</h5>
      </div>
      <div class="w-100 lg:w-1/5">
        <h5 class="font-semibold">Explore Aarke</h5>
      </div>
      <div class="w-100 lg:w-2/5">
        <h5 class="font-semibold">Follow us</h5>
      </div>
    </div>

    <div>
      {% for link in linklists.footer.links %}
        <a href="{{ link.url }}">
          {{ link.title }}
        </a>
      {% endfor %}
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "t:sections.footer.name",
  "settings": [
    {
      "type": "paragraph",
      "content": "t:sections.footer.settings.paragraph"
    }
  ]
}
{% endschema %}
